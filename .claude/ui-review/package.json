{
  "name": "ui-review",
  "private": true,
  "type": "module",
  "scripts": {
    "install:pw": "npx playwright install --with-deps",
    "test": "playwright test --reporter=list",
    "test:headed": "playwright test --headed --project=chromium-desktop",
